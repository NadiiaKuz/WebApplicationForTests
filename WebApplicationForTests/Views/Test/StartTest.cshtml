@model WebApplicationForTests.Models.Test
@{
    ViewData["Title"] = "Take Test";
}

<h2>@Model.Title</h2>

<form asp-action="SubmitTest" asp-controller="Test" method="post">
    <input type="hidden" name="testId" value="@Model.Id" />
    <br>
    @for (int i = 0; i < Model.Questions.Count; i++)
    {
        <div class="question">
            <h5> @Model.Questions[i].Content</h5>
            @foreach (var answer in Model.Questions[i].Answers)
            {
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="@($"question-{Model.Questions[i].Id}")" value="@answer.Id" />
                    <label class="form-check-label">@answer.Content</label>
                </div>
            }
            <br>
        </div>
    }

    <button type="submit" class="btn btn-primary">Submit</button>
</form>